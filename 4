#include <iostream>
#include <fstream>
#include <windows.h>
#include <string>

using namespace std;

int main()

{

	setlocale(LC_ALL, "Russian");
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	fstream f;
	string S;
	char c(32);
	int i,j

	f.open("C:\\.vs\\Файлы\\4.txt");

	if (f) {
		getline(f, S, '\0');
		for (i = 0; i < S.size(); i++)
			if (S[i] == c && S[i] == S[i + 1] )
				for (j = i; j < S.size(); j++)
					S[j] = S[j + 1];
		f << S;
		f.close();
		f.open("C:\\.vs\\Файлы\\4.txt", ios::out);
		for (i = 0; i < S.size(); i++)
			if (S[i] == c && S[i] == S[i + 1])
				for (j = i; j < S.size(); j++)
					S[j] = S[j + 1];
		f << S;
		f.close();
	}

	else { cout << "ne otkrut"; }
	return 0;
}
